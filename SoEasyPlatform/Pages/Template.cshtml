@page
@{
    ViewData["Title"] = "模版管理";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@section js{
    <script src="~/views/system/template.js@(ViewBag.version)"></script>
}
<div class="x_panel search_box">
    <div class="x_title">
        <h2><i class="fa fa-home"></i> 模版管理 ： 修改完后可以预览看效果（在实体配置、业务配置 或者 前端配置里面）</h2>
        <div class="clearfix"></div>
    </div>

    <div class="x_content main-box">
        <form id="divFrom" class="form-inline">
            <div class="form-group">
                <label for="ex3" class="col-form-label">名称：</label>
                <input type="text" id="Desc" name="Desc" class="form-control input" placeholder=" ">
            </div>
            <button id="btnSearch" type="button" class="btn btn-blue"><i class="fa fa-search"></i>搜索</button>
            <button id="btnReset" type="button" class="btn btn-info"><i class="fa fa-refresh"></i>重置</button>
            @Html.Partial("Page")
        </form>
    </div>
    <div class="x_content">
        <button id="btnAdd" type="button" class="btn btn-green"><i class="fa fa-plus"></i>添加</button>
        <button id="btnEdit" type="button" class="btn btn-primary"><i class="fa fa-edit"></i>修改</button>
        <button id="btnDel" type="button" class="btn btn-search"><i class="fa fa-close"></i>删除</button>
    </div>
    <div class="x_content">
        <table id="divGrid"></table>
        <div id="divGridPage" class="pagination"></div>
    </div>
    <div id="divOpen" style="display:none">
        <form id="frmSave" class="" action="" method="post" novalidate="">
            <div class="x_content" style="margin-top:20px">
                <div class="field item form-group">
                    <label class="col-form-label col-md-2 col-sm-2  label-align">模版类型<span class="required">*</span></label>
                    <div class="col-md-10 col-sm-9">
                        <input type="text" readonly id="saveTemplateTypeName" name="TemplateTypeName" placeholder="Select" autocomplete="off" />
                        <input type="hidden" readonly id="saveTemplateTypeId" name="TemplateTypeId" autocomplete="off" />
                    </div>
                </div>
                <div class="field item form-group">
                    <label class="col-form-label col-md-2 col-sm-2  label-align">标题<span class="required">*</span></label>
                    <div class="col-md-10 col-sm-9">
                        <input id="saveTitle" type="text" name="Title"  class="form-control"  />
                    </div>
                </div>
                <div class="field item form-group">
                    <label class="col-form-label col-md-2 col-sm-2  label-align">  <button id="btnParameter" type="button" class="btn btn-info"><i class="fa fa-search"></i>参数查看</button><span class="required">*</span></label>
                    <div class="col-md-10 col-sm-9">
                        <input id="saveContent" type="hidden" name="Content" />
                        <input id="saveId" type="hidden" name="Id" value="" />
                        <iframe id="editorContainer" src="~/vendors/monaco-editor/monaco-editor.html" frameborder="0" style="width: 100%; height: 340px; border: 1px solid grey"></iframe>
                    </div>
                </div>
                @*<div class="field item form-group">
                    <label class="col-form-label col-md-2 col-sm-2  label-align">连接字符串<span class="required">*</span></label>
                    <div class="col-md-10 col-sm-9">
                        <input id="saveConnection" name="Connection" class="form-control" type="text" />
                    </div>
                </div>*@
            </div>
        </form>
    </div>
</div>
@Html.Partial("ParameterDescription")